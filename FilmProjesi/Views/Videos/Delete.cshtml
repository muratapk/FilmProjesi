@model EntityLayer.Concrete.Videos
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<form asp-action="Delete" asp-controller="Videos">
    <div class="form-group">
        <input type="hidden" name="VideoId" asp-for="VideoId"/>
        <label for="exampleInputEmail1">Film Adı</label>
        <input type="text" readonly class="form-control" asp-for="Title" name="Title"   placeholder="Kategori Adı">
       
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Açıklaması</label>
        <input type="text" readonly class="form-control" asp-for="Description" name="Description" placeholder="Kategori Adı">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kategorisi</label>
        <input type="text" readonly class="form-control" asp-for="CategoryId" name="CategoryId" placeholder="Kategori Adı">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Yılı</label>
        <input type="text" readonly class="form-control" asp-for="Year" name="Year" placeholder="Kategori Adı">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Ülkesi</label>
        <input type="text" readonly class="form-control" asp-for="Country" name="Country" placeholder="Kategori Adı">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Video Resim</label>
        <input type="text" readonly class="form-control" asp-for="Picture" name="Picture" placeholder="Kategori Adı">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Film Videosu</label>
        <input type="text" readonly class="form-control" asp-for="Film" name="Film" placeholder="Kategori Adı">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Aktörler</label>
        <input type="text" readonly class="form-control" asp-for="Actors" name="Actors" placeholder="Kategori Adı">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Yönetmen</label>
        <input type="text" readonly class="form-control" asp-for="Director" name="Director" placeholder="Kategori Adı">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Fragman</label>
        <input type="text" readonly class="form-control" asp-for="Teaser" name="Teaser" placeholder="Kategori Adı">

    </div>
  
   
    <button type="submit" class="btn btn-primary">Bu Kayıt Silinecek</button>
    <a asp-action="index" class="btn btn-secondary" asp-controller="Videos">İşlemi İptal Et</a>
</form>